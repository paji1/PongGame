// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id Int @id @default(autoincrement())
  name42 String @unique
  nick String? 
  created DateTime
  messages messages[]
  room_particiants room_particiants[]
}


model messages {
  id Int @id @default(autoincrement())
  room_id Int 
  user_id Int 
  message String
  created DateTime  @default(now())
  user user @relation(fields: [user_id], references: [id])
  rooms rooms @relation(fields: [room_id], references: [id])
}

model room_particiants {
  id Int @id@default(autoincrement())
  room_id Int 
  user_id Int 
  created DateTime @default(now())
  user user @relation(fields: [user_id], references: [id])
  rooms rooms @relation(fields: [room_id], references: [id])
}

model rooms {
  id Int @id @default(autoincrement())
  title  String?
  type roomType
  created DateTime @default(now())
  room_particiants room_particiants[]
  messages messages[]
}
enum  roomType {
  chat
  group_public
  group_private
  group_protected
}