// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id Int @id @default(autoincrement())
  name42 String @unique
  nick String @unique
  created DateTime
  messages messages?
  room_particiants room_particiants?
}

model rooms {
  id Int @id @default(autoincrement())
  title  String
  messages messages?
  room_particiants room_particiants?
}
model messages {
  id Int @id @default(autoincrement())
  room Int @unique
  rooms rooms @relation(fields: [room], references: [id])
  sender Int @unique
  user user @relation(fields: [sender], references: [id])
  message String
  created DateTime  @default(now())
}
model room_particiants {
  id Int @id@default(autoincrement())
  room_id Int @unique
  rooms rooms @relation(fields: [room_id], references: [id])
  user_id Int @unique
  user user @relation(fields: [user_id], references: [id])
  created DateTime @default(now())
}
